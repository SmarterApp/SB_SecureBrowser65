DEPTH=../..
topsrcdir=@top_srcdir@
srcdir=@srcdir@
VPATH=@srcdir@

include $(DEPTH)/config/autoconf.mk

DEFINES += -DMOZ_APP_VERSION=\"$(MOZ_APP_VERSION)\"

ifeq ($(OS_ARCH),WINNT)
#   DEFINES += -DUNICODE
endif


MODULE               = securebrowser
LIBRARY_NAME         = securebrowser
IS_COMPONENT         = 1
MODULE_NAME          = mozSecurebrowserModule
EXPORT_LIBRARY       = 1
LIBXUL_LIBRARY       = 1

SHORT_LIBNAME        = securebrowser
FORCE_USE_PIC        = 1

MOZILLA_INTERNAL_API = 1
# FORCE_SHARED_LIB   = 1

ifdef MOZ_DEBUG
# USE_STATIC_LIBS      = 1
# FORCE_STATIC_LIB     = 1
endif

ifeq ($(OS_ARCH),Darwin)
  sourcefile = mozSecurebrowserOSX.cpp 
endif
ifeq ($(OS_ARCH),WINNT)
  sourcefile = mozSecurebrowserWIN.cpp
endif
ifeq ($(OS_ARCH), Linux)
  sourcefile = mozSecurebrowserLinux.cpp 
endif

ifeq ($(OS_ARCH), Linux)
LOCAL_INCLUDES		= -I$(srcdir)/../include

SHARED_LIBRARY_LIBS	+= \
			$(srcdir)/../lib/libFestival.a  \
			$(srcdir)/../lib/libeststring.a \
			$(srcdir)/../lib/libestools.a   \
			$(srcdir)/../lib/libestbase.a   \
			$(NULL)
endif

CPPSRCS=                     \
  $(sourcefile)              \
  mozSecurebrowserModule.cpp \
	$(NULL)

EXTRA_DSO_LDOPTS +=        \
  $(LIBS_DIR)              \
  $(EXTRA_DSO_LIBS)        \
  $(MOZ_UNICHARUTIL_LIBS)  \
  $(XPCOM_GLUE_LDOPTS)     \
  $(MOZ_COMPONENT_LIBS)    \
  $(NSPR_LIBS)             \
  $(XPCOM_LIBS)            \
  $(NULL)

ifeq ($(OS_ARCH),Darwin)
EXTRA_DSO_LDOPTS +=     \
  -framework Carbon     \
  -framework IOKit      \
  $(NULL)
endif

ifeq ($(OS_ARCH),WINNT)
OS_LIBS += $(call EXPAND_LIBNAME, psapi Iphlpapi)
# OS_LIBS += $(call EXPAND_LIBNAME, psapi Iphlpapi user32 atls ws2_32)
endif

include $(topsrcdir)/config/rules.mk

ifeq ($(OS_ARCH), Linux)
CXXFLAGS += -g -Wno-deprecated 
endif

pete:
	echo $(CXXFLAGS)
	echo EXTRA_DSO_LDOPTS: $(EXTRA_DSO_LDOPTS)      \
	echo
	echo "#####################################"
	echo
	echo SHARED_LIBRARY_LIBS $(SHARED_LIBRARY_LIBS) 
	

