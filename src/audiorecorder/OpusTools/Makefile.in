DEPTH=../../..
topsrcdir=@top_srcdir@
srcdir=@srcdir@
VPATH=@srcdir@

include $(DEPTH)/config/autoconf.mk

DEFINES += -DFLOATING_POINT

MODULE           = opustools
LIBRARY_NAME     = opustools

ifeq ($(OS_ARCH),Darwin)
os_include=osx
endif

ifeq ($(OS_ARCH),Linux)
os_include=linux
# DEFINES += -DCL_DISABLE_SSE2
endif

ifeq ($(OS_ARCH),WINNT)
os_include=win
endif

LOCAL_INCLUDES = -I$(srcdir)/../include/$(os_include) -I$(srcdir)/../include/$(os_include)/speex

CPPSRCS=                     \
  	audio-in.cpp         \
  	diag_range.cpp       \
  	lpc.cpp              \
  	opus_header.cpp      \
  	resample.cpp         \
  	unicode_support.cpp  \
	$(NULL)

ifeq ($(OS_ARCH),Darwin)

SHARED_LIBRARY_LIBS     +=                                                 \
			$(srcdir)/../libs/osx/libopus.a                    \
			$(srcdir)/../libs/osx/libspeexdsp.a                \
			$(NULL)

endif

ifeq ($(OS_ARCH), Linux)
LINUX_SHARED_LIBRARY_LIBS     +=                                             \
			$(srcdir)/libs/linux/libboost_system.a               \
			$(srcdir)/libs/linux/libboost_thread.a               \
			$(srcdir)/libs/linux/libogg.a                        \
			$(srcdir)/libs/linux/libopus.a                       \
			$(srcdir)/libs/linux/libportaudio.a                  \
			$(srcdir)/libs/linux/libjson_spirit.a                \
			$(NULL)
endif

include $(topsrcdir)/config/rules.mk

ifeq ($(OS_ARCH),WINNT)
CXXFLAGS := $(filter-out -W3, $(CXXFLAGS))

libs::
	@lib *.obj -OUT:$(LIBRARY_NAME).lib
endif

ifeq ($(OS_ARCH),Linux)

CXXFLAGS := $(filter-out -Wall, $(CXXFLAGS)) -msse

EXTRA_FLAGS = -lasound -shared *.o -o 

libs::
	@ar -cr $(LIBRARY_NAME).a *.o

endif

ifeq ($(OS_ARCH),Darwin)
CXXFLAGS := $(filter-out -Wall -fno-rtti -fno-exceptions -fvisibility=hidden, $(CXXFLAGS)) -fvisibility=default 

libs::
	@ar -cr $(LIBRARY_NAME).a *.o
endif

clean::
	@rm -rf *.a *.o *.so .deps;

pete:
	@echo $(CXXFLAGS)

