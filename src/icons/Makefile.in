DEPTH = ../..
topsrcdir = @top_srcdir@
srcdir=@srcdir@
VPATH=@srcdir@

include $(DEPTH)/config/autoconf.mk

include $(topsrcdir)/config/rules.mk

ICONS = \
	kiosk-main \
	$(NULL)

ifneq (,$(filter gtk gtk2,$(MOZ_WIDGET_TOOLKIT)))
ICON_FILES = \
	$(foreach icon,$(ICONS),gtk/$(icon).xpm) \
	$(foreach icon,$(ICONS),gtk/$(icon)16.xpm) \
	$(NULL)

libs:: gtk/kiosk-main.xpm gtk/kiosk-main16.xpm
	mkdir -p $(DIST)/bin/icons
	$(INSTALL) $^ $(DIST)/bin/icons
endif

ifeq ($(OS_ARCH),WINNT)
ICON_FILES = $(foreach icon,$(ICONS),win/$(icon).ico)

export:: win/kiosk-main.ico
	mkdir -p $(DIST)/branding
	cp $^ $(DIST)/branding/app.ico
endif

ifdef ICON_FILES
libs:: $(ICON_FILES)
	mkdir -p $(DIST)/bin/chrome/icons/default
	$(INSTALL) $^ $(DIST)/bin/chrome/icons/default
endif
